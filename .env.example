# Required: absolute host path to your GGUF model file
LLM_MODEL_HOST_PATH=/absolute/path/to/your-model.gguf

# Model identity and mounted path inside container
LLM_MODEL=your-model-id
LLM_MODEL_PATH=/models/model.gguf

# Context and performance tuning
LLM_CONTEXT_LENGTH=32768
LLM_N_GPU_LAYERS=30
LLM_THREADS=6
LLM_BATCH_SIZE=512
LLM_MAX_CONCURRENT_PREDICTIONS=4
LLM_MAX_TOKENS=2048

# Advanced toggles
LLM_FLASH_ATTENTION=true
LLM_USE_MMAP=true
LLM_OFFLOAD_KQV=true

# Optional deterministic seed (leave empty for random)
LLM_SEED=

# Continuous audio capture (VAD + queue + worker)
AUDIO_AUTO_LISTEN=false
AUDIO_INPUT_DEVICE=
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FRAME_MS=20
AUDIO_QUEUE_DIR=temp/spool_audio
AUDIO_QUEUE_MAX_SIZE=200
AUDIO_WORKER_POLL_SECONDS=1.0

# VAD tuning
AUDIO_VAD_MODE=2
AUDIO_VAD_START_TRIGGER_MS=240
AUDIO_VAD_START_WINDOW_MS=400
AUDIO_VAD_END_SILENCE_MS=900
AUDIO_VAD_PRE_ROLL_MS=300
AUDIO_VAD_MIN_SEGMENT_MS=1000
AUDIO_VAD_MAX_SEGMENT_MS=30000

# Intelligent flush tuning
AUDIO_FLUSH_MAX_WAIT_SECONDS=60
AUDIO_FLUSH_MIN_WORDS=100
AUDIO_FLUSH_SILENCE_GAP_SECONDS=4
AUDIO_MAX_BATCH_SEGMENTS=8
AUDIO_MAX_RETRIES=3
