# Docker API endpoint
AUDIO_BRIDGE_API_AUDIO_URL=http://localhost:8000/audio

# Optional: input device id or exact name as shown by sounddevice
AUDIO_BRIDGE_INPUT_DEVICE=

# Capture and VAD
AUDIO_BRIDGE_SAMPLE_RATE=16000
AUDIO_BRIDGE_FRAME_MS=20
AUDIO_BRIDGE_VAD_MODE=2
AUDIO_BRIDGE_START_TRIGGER_MS=240
AUDIO_BRIDGE_START_WINDOW_MS=400
AUDIO_BRIDGE_END_SILENCE_MS=900
AUDIO_BRIDGE_PRE_ROLL_MS=300
AUDIO_BRIDGE_MIN_SEGMENT_MS=1000
AUDIO_BRIDGE_MAX_SEGMENT_MS=30000

# Disk spool and upload
AUDIO_BRIDGE_SPOOL_DIR=audio_bridge/spool
AUDIO_BRIDGE_REQUEST_TIMEOUT_S=20
AUDIO_BRIDGE_MAX_UPLOAD_PER_CYCLE=10
AUDIO_BRIDGE_MIN_RMS=120
AUDIO_BRIDGE_LOG_LEVEL=INFO
