COLLECTOR_HOST=127.0.0.1
COLLECTOR_PORT=8787
COLLECTOR_DATA_DIR=data

# Transcription backend: openai | faster_whisper | none
# Default: openai if OPENAI_API_KEY is set, otherwise none.
COLLECTOR_TRANSCRIBE_BACKEND=openai

OPENAI_API_KEY=
OPENAI_TRANSCRIBE_MODEL=whisper-1

# Local transcription (faster-whisper). Requires ffmpeg installed.
FASTER_WHISPER_MODEL=small
FASTER_WHISPER_DEVICE=cpu
FASTER_WHISPER_COMPUTE_TYPE=int8
FASTER_WHISPER_LANGUAGE=
FASTER_WHISPER_TASK=transcribe
FASTER_WHISPER_VAD_FILTER=1
