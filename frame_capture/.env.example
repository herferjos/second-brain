# Collector: where to send frame.capture events (empty = do not send)
FRAME_CAPTURE_COLLECTOR_EVENTS_URL=http://127.0.0.1:8787/events

# Capture
FRAME_CAPTURE_NUM_FRAMES=10
FRAME_CAPTURE_DELAY_S=1.0
FRAME_CAPTURE_MONITOR_INDEX=1
FRAME_CAPTURE_OUTPUT_DIR=outputs

# Collector request timeout (seconds)
FRAME_CAPTURE_COLLECTOR_TIMEOUT_S=30

# OCR (LightOnOCR-2-1B, local)
FRAME_CAPTURE_MAX_NEW_TOKENS=1024
FRAME_CAPTURE_MAX_IMAGE_SIZE=1540
